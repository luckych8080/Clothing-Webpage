<% layout('layouts/boilerplate') %>

<a href="/products/new" class="btn btn-secondary px-2">New Product</a>

<h1>All Products</h1>
    <div class="container">
        <ul>
            <% for (let product of products){%>
                <li><a href="/products/<%= product._id %>">
                    <%= product.name %>
                    </a></li>
                <% }%>
        </ul>
    </div>