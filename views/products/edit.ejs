<% layout('layouts/boilerplate') %>

<div class="container mb-3">
    <div class="d-flex justify-content-center">
        <div class="card" style="width: 25rem;">
            <div class="card-body">
                <h5 class="card-title">Edit Product</h5>
                <form action="/products/<%=product._id%>?_method=PUT" method="POST" novalidate 
                 class="validated-form" >
                    <div class="mb-3">
                        <label for="name" class="form-label">Product Name</label>
                        <input type="text" class="form-control" id="name" placeholder="Name" name="product[name]" value="<%= product.name %>" required>
                    </div>
                    <div class="mb-3">
                        <label for="price" class="form-label">Price</label>
                        <div class="input-group ">
                            <span class="input-group-text">&#8377;</span>
                            <input type="number" class="form-control" aria-label="Amount" name="product[price]" value="<%= product.price %>" required>
                        </div>
                    </div>
                    <div class="mb-3">
                        <label for="description" class="form-label">Description</label>
                        <textarea class="form-control"  id="description" cols="30" rows="5"
                            name="product[description]" required><%= product.description %></textarea>
                    </div>
                    <div class="mb-3">
                        <label for="images" class="form-label">Images</label>
                        <input type="text" id="images" class="form-control" name="product[image]" value="<%= product.name %>" required>
                    </div>
                        <button class="btn btn-success">Submit</button>
                </form>

                <div class="my-3">
                    <a class="btn btn-secondary" href="/products/<%=product._id%>">Cancel</a>
                </div>
            </div>
        </div>
    </div>
</div>